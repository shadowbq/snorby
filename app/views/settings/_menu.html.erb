<% if Snorby::Worker.problems? %>

	<%= drop_down_for('Worker Options', 'icons/worker.png', 'worker') do %>
	
		<% if Snorby::Worker.running? %>
			<%= drop_down_item "Start Sensor Cache Job", start_sensor_cache_settings_path unless Snorby::Jobs.sensor_cache? && Snorby::Worker.running? %>
			<%= drop_down_item "Start Daily Cache Job", start_daily_cache_settings_path unless (Snorby::Jobs.daily_cache? && Snorby::Worker.running?) %>
		<% else %>
			<%= drop_down_item "Start Worker", start_worker_settings_path %>
		<% end %>
		
	<% end %>

<% end %>
