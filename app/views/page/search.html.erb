<%= stylesheet 'jquery' %>
<%= javascript :footer, 'daterangepicker' %>

<% content_for :footer do %>

  <script type="text/javascript">
    $('.datepicker').daterangepicker({
      dateStart: 'Today', 
      dateEnd: 'Today',
      earliestDate: 'Today'
    });
	</script>

<% end %>

<%= title "Snorby Advanced Search" do %>

	<%= drop_down_for('More Options', 'icons/filter.png', 'options') do %>

    <%= drop_down_item "View Saved Searches", '#', nil, {} %>

    <%= drop_down_item "Save Current Search", '#', nil, {} %>

	<% end %>

<% end %>

<div id='search' class='boxit page grid_12'>

  <div class="search-match-box">
    <input name="enable-all-search-rules" type="checkbox" checked='checked'/> Match 
    <select><option value='any'>Any</option><option value='all'>All</option></select> 
    of the following rules: 
  </div>

  <div class="search-content-box">
    <div class="inside">
      
      <div class="column-select search-content-box-item">
        <select class='add_chosen'>
          <option value='any'>Any</option>
          <option value='all'>All</option>
        </select> 
      </div>

      <div class="operator-select search-content-box-item">
        <select class='add_chosen'>
          <option value='any'>is</option>
          <option value='all'>is not</option>
        </select>      
      </div>

      <div class="value search-content-box-item">
        <input class='search-content-value' name="" type="text" /> 
      </div>

      <div title='Remove search rule' class="add_tipsy search-content-remove search-content-box-item">
        <img src="../images/icons/minus.png" alt="" />
      </div>

      <div title='Add new search rule' class="add_tipsy search-content-add search-content-box-item">
        <img src="../images/icons/add.png" alt="" />
      </div>
    </div>
  </div>



