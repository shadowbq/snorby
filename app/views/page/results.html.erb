<% if params[:title] %>
	
	<%= title "#{truncate(h(params[:title]))} <i>#{pluralize(@events.pager.total, 'event')} found</i>".html_safe, "#{h(params[:title])}" do %>
    <%= menu_item "Hotkeys", hotkey_events_path, 'events/keyboard.png', :class => 'snorbybox' %>
		<%= render :partial => 'events/menu' %>
	<% end %>
	
<% else %>
	
	<%= title "Search Results <i>#{pluralize(@events.pager.total, 'event')} found</i>".html_safe, 'Search Results' do %>
    <%= menu_item "Hotkeys", hotkey_events_path, 'events/keyboard.png', :class => 'snorbybox' %>
		<%= render :partial => 'events/menu' %>
	<% end %>
	
<% end %>

<%= render :partial => 'page/events' %>
